{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "all packages",
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "linters",
      "dependencyDashboardApproval": true,
      "extends": ["packages:linters"]
    }
  ],
  "rangeStrategy": "bump",
  "schedule": ["on friday"]
}
